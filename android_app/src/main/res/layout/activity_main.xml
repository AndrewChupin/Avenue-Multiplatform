<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorScreen"
              tools:context="com.avenue.client.presentation.main.MainActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <include
                    layout="@layout/item_trip_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_base_lower_half"
                    android:layout_marginBottom="@dimen/space_base_lower_half"
                    android:layout_marginStart="@dimen/space_base"
                    android:layout_marginEnd="@dimen/space_base"
                    tools:layout_editor_absoluteX="16dp" />

            <include
                    layout="@layout/item_trip_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_base_lower_half"
                    android:layout_marginBottom="@dimen/space_base_lower_half"
                    android:layout_marginStart="@dimen/space_base"
                    android:layout_marginEnd="@dimen/space_base"
                    tools:layout_editor_absoluteX="16dp" />

            <include
                    layout="@layout/item_trip_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_base_lower_half"
                    android:layout_marginBottom="@dimen/space_base_lower_half"
                    android:layout_marginStart="@dimen/space_base"
                    android:layout_marginEnd="@dimen/space_base"
                    tools:layout_editor_absoluteX="16dp" />

            <include
                    layout="@layout/item_trip_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_base_lower_half"
                    android:layout_marginBottom="@dimen/space_base_lower_half"
                    android:layout_marginStart="@dimen/space_base"
                    android:layout_marginEnd="@dimen/space_base"
                    tools:layout_editor_absoluteX="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>